<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_list_item_bg_selector"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
    	
        <ImageView 
            android:id="@+id/system_contact_avatar"
            android:layout_height="wrap_content"
            android:src="@drawable/default_avatar"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"/>
        
        <LinearLayout 
            android:id="@+id/system_contact_name_layout"
            android:layout_toRightOf="@+id/system_contact_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            
            <TextView 
	            android:id="@+id/system_contact_name"
	            android:layout_width="wrap_content"
	            android:text="Name"
	            android:textColor="@color/guide_color"
	            android:layout_marginTop="10dp"
	            android:layout_height="wrap_content"/>
            
        </LinearLayout>      
        
        <Button    
            android:id="@+id/system_contact_invite"
            android:layout_width="wrap_content"
            android:text="邀请注册"
            android:layout_marginRight="5dp"
            android:padding="10dp"
            android:textColor="@color/guide_color"
            android:layout_centerVertical="true"
            android:background="@color/cpb_grey"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"/>
        
    </RelativeLayout>    

</LinearLayout>
