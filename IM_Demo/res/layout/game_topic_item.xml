<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/common_list_item_bg_selector"
    android:layout_height="wrap_content" >
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:background="@drawable/radius_bg"  
        android:layout_height="wrap_content"
        android:padding="10dp">
        
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            
            <ImageView 
                android:id="@+id/game_topic_author_icon"
                android:layout_width="50dp"
                android:src="@drawable/user_icon_default_main"
                android:layout_height="50dp"/>
            
            <LinearLayout 
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/game_topic_author_icon"
                android:layout_height="wrap_content">
                
                <TextView 
                    android:id="@+id/game_topic_author_name"
                    android:layout_width="wrap_content"
                    android:text="Nick"
                    android:layout_height="wrap_content"/>
                
                <TextView 
                    android:id="@+id/game_topic_update_time"
                    android:layout_width="wrap_content"
                    android:text="刚刚"
                    android:textColor="#aaaaaa"
                    android:textSize="13sp"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"/>
                
            </LinearLayout>
            
            <TextView 
			    android:id="@+id/game_topic_comment"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentRight="true"
			    android:layout_below="@id/content_image"
			    android:drawableLeft="@drawable/ic_action_comment"
			    android:gravity="center"
			    android:text="评论"
			    android:textColor="#888888"
			    android:layout_marginTop="4dip"
			    android:layout_marginBottom="4dip"
			    android:layout_marginLeft="8dip"
			    android:layout_marginRight="8dip"/>
            
        </RelativeLayout>
        
        <TextView 
		    android:id="@+id/game_topic_content_text"
		    style="@style/TextTheme"
		    android:layout_marginTop="10dp"
		    android:text="十年之前，我不认识你 你不属于我，我们还是一样，陪在一个陌生人左右，走过渐渐熟悉的街头;十年之后，我们是朋友， 还可以问候，只是那种温柔，再也找不到拥抱的理由，情人最后难免沦为朋友。"/>
        
        
    </LinearLayout>

</RelativeLayout>
