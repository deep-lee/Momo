<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal" >
    
    <ImageView 
        android:id="@+id/common_fragment_search_iv"
        android:layout_width="fill_parent"
        android:src="@drawable/icon_fragment_search_bg"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/layout_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_below="@+id/common_fragment_search_iv"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        
        <TextView
            android:id="@+id/tv_new_name"
            style="@style/Smile.TextView._Black"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:singleLine="true"
            android:padding="5dp"
            android:layout_marginLeft="70dp"
            android:text="@string/new_friends"
            android:textSize="15sp" />

        <FrameLayout
            android:id="@+id/frame_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" >

            <ImageView
                android:id="@+id/iv_msg_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:contentDescription="@string/action_settings"
                android:src="@drawable/msg_tips" />

            <ImageView
                android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:layout_marginTop="6.0dip"
                android:contentDescription="@string/action_settings"
                android:src="@drawable/icon_contact_new_friends" />
        </FrameLayout>

        
    </LinearLayout>

<!--     <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/layout_new"
        android:layout_marginLeft="75dp"
        android:background="#e6e6e6" >
    </View> -->
    
    <LinearLayout
        android:id="@+id/layout_black_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_new"
        android:layout_marginTop="6.0dip"
        android:clickable="true"
        
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        
        <TextView
            style="@style/Smile.TextView._Black"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:layout_marginLeft="70dp"
            android:padding="5dp"
            android:singleLine="true"
            android:text="@string/black_list"
            android:textSize="15sp" />
        
        <FrameLayout
            android:id="@+id/frame_black_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" >

	        <ImageView
	            android:layout_width="50.0dip"
	            android:layout_height="50.0dip"
	            android:contentDescription="@string/action_settings"
	            android:padding="5dp"
	            android:layout_gravity="center_vertical"
	            android:src="@drawable/icon_contact_black_list" />
        
        </FrameLayout>

        
    </LinearLayout>

</RelativeLayout>