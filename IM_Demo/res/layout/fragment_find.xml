<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    
    android:layout_height="match_parent" >
    
    <RelativeLayout
	        android:id="@+id/title"
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/height_top_bar"
	        android:layout_alignParentTop="true"
	        android:background="@color/common_action_bar_bg_color" >
	
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="10dp"
	            android:text="摇摇"
	            android:textColor="#ffffff"
	            android:textSize="18sp" />
	
	        <ImageView
	            android:id="@+id/iv_add"
	            android:layout_width="56dp"
	            android:layout_height="match_parent"
	            android:layout_alignParentRight="true"
	            android:clickable="true"
	            android:src="@drawable/base_action_bar_add_bg_selector" />
	
	        <ImageView
	            android:id="@+id/iv_search"
	            android:layout_width="56dp"
	            android:layout_height="match_parent"
	            android:layout_toLeftOf="@id/iv_add"
	            android:clickable="true"
	            android:src="@drawable/base_action_bar_search_bg_selector" />
	    </RelativeLayout>
    
    <!-- 生活圈 -->
    <RelativeLayout
        android:id="@+id/fragment_find_life_circle"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/common_list_item_bg_selector"
        android:layout_marginTop="20dp"
        android:padding="3dp" >
        
        <ImageView 
            android:id="@+id/find_life_circle_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_find_life_clrcle"/>
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/find_life_circle_icon"
	        android:layout_marginStart="20dp"
	        android:layout_centerVertical="true"
            android:orientation="vertical">
            
            <TextView
	            style="@style/Smile.TextView._Black"
	            android:textSize="15sp"
	            android:text="@string/fragment_find_life_circle" />
            
            <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="12sp"
	            android:textColor="#ababab"
	            android:layout_marginTop="5dp"
	            android:text="@string/fragment_find_life_circle_tips" />
            
        </LinearLayout>
       

        <TextView
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:drawablePadding="10dp"
            android:background="@drawable/register_bottom_arrow" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/fragment_find_life_nears_friends"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/common_list_item_bg_selector"
        android:layout_marginTop="20dp"
        android:padding="3dp" >
        
        <ImageView 
            android:id="@+id/find_nears_friends_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_find_nears_friends"/>

        <TextView
            style="@style/Smile.TextView._Black"
            android:layout_toRightOf="@+id/find_nears_friends_icon"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:text="@string/fragment_find_nears_friends" />

         <TextView
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:drawablePadding="10dp"
            android:background="@drawable/register_bottom_arrow" />
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:background="#dadada" />
    
    <RelativeLayout
        android:id="@+id/fragment_find_attractions_roma"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/common_list_item_bg_selector"
        android:padding="3dp" >
        
        <ImageView 
            android:id="@+id/find_attractions_roma_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_find_nears_friends"/>

        <TextView
            style="@style/Smile.TextView._Black"
            android:layout_toRightOf="@+id/find_attractions_roma_icon"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:text="@string/fragment_find_attractions_roma" />

         <TextView
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:drawablePadding="10dp"
            android:background="@drawable/register_bottom_arrow" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/fragment_find_sign_in"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/common_list_item_bg_selector"
        android:layout_marginTop="20dp"
        android:padding="3dp" >
        
        <ImageView 
            android:id="@+id/find_sign_in_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_find_life_clrcle"/>

        <TextView
            style="@style/Smile.TextView._Black"
            android:layout_toRightOf="@+id/find_sign_in_icon"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:text="@string/fragment_find_sign_in" />

         <TextView
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:drawablePadding="10dp"
            android:background="@drawable/register_bottom_arrow" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/fragment_find_game_community"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/common_list_item_bg_selector"
        android:layout_marginTop="20dp"
        android:padding="3dp" >
        
        <ImageView 
            android:id="@+id/find_game_community_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_find_life_clrcle"/>

        <TextView
            style="@style/Smile.TextView._Black"
            android:layout_toRightOf="@+id/find_game_community_icon"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:text="@string/fragment_find_community_icon" />

         <TextView
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:drawablePadding="10dp"
            android:background="@drawable/register_bottom_arrow" />
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:background="#dadada" />
    
    <RelativeLayout
        android:id="@+id/fragment_find_eat_drink_play_happy"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/common_list_item_bg_selector"
        android:padding="3dp" >
        
        <ImageView 
            android:id="@+id/find_eat_drink_play_happy_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_find_life_clrcle"/>

        <TextView
            style="@style/Smile.TextView._Black"
            android:layout_toRightOf="@+id/find_eat_drink_play_happy_icon"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:text="@string/fragment_find_eat_drink_play_happy" />

         <TextView
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:drawablePadding="10dp"
            android:background="@drawable/register_bottom_arrow" />
    </RelativeLayout>
    
    

</LinearLayout>
