<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg_color"
    android:orientation="vertical">
    
    <include
        android:id="@+id/common_actionbar"
        layout="@layout/include_action_bar" />
   
    <RelativeLayout
        android:id="@+id/layout_game_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my_game_list"
        android:padding="10dp" >

        <ImageView 
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@drawable/game_icon"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="水果连连看"
            style="@style/Smile.TextView._Black"
            android:layout_marginLeft="55dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
        
            <ImageView
                android:id="@+id/iv_game_1_arraw"
                style="@style/Smile.ImageView"
                android:layout_width="20dp"
                android:contentDescription="@string/action_settings"
                android:src="@drawable/register_bottom_arrow" />
            
        </LinearLayout>
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/layout_game_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my_game_list"
        android:padding="10dp" >

        <ImageView 
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@drawable/game_icon"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="猜数字"
            style="@style/Smile.TextView._Black"
            android:layout_marginLeft="55dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
        
            <ImageView
                android:id="@+id/iv_game_2_arraw"
                style="@style/Smile.ImageView"
                android:layout_width="20dp"
                android:contentDescription="@string/action_settings"
                android:src="@drawable/register_bottom_arrow" />
            
        </LinearLayout>
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/layout_game_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my_game_list"
        android:padding="10dp" >

        <ImageView 
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@drawable/game_icon"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="mixed color"
            style="@style/Smile.TextView._Black"
            android:layout_marginLeft="55dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
        
            <ImageView
                android:id="@+id/iv_game_3_arraw"
                style="@style/Smile.ImageView"
                android:layout_width="20dp"
                android:contentDescription="@string/action_settings"
                android:src="@drawable/register_bottom_arrow" />
            
        </LinearLayout>
    </RelativeLayout>
    
</LinearLayout>
