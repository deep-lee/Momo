<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/common_list_item_bg_selector"
    android:orientation="horizontal">    
    
    <ImageView 
        android:id="@+id/chat_bg_item_iv"
        android:layout_width="150dp"
        android:layout_centerVertical="true"
        android:src="@drawable/chat_bg_mingxing"
        android:scaleType="centerCrop"
        android:layout_height="120dp"/>
    
    <LinearLayout 
        android:id="@+id/chat_bg_group_name_layout"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/chat_bg_item_iv"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content">
        
        <TextView 
            android:id="@+id/chat_bg_group_name"
            android:layout_width="wrap_content"
            android:text="分组名称"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"/>
        <TextView 
            android:id="@+id/chat_bg_group_num_of_photo"
            android:layout_width="wrap_content"
            android:textColor="#aaaaaa"
            android:layout_marginTop="5dp"
            android:text="(5张图片)"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"/>
        
    </LinearLayout>
    
    <TextView
        android:id="@+id/slide_tv_set_account_bangding"
        android:layout_width="10dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:drawablePadding="10dp"
        android:background="@drawable/register_bottom_arrow" />

</RelativeLayout>
