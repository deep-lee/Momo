<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/common_list_item_bg_selector"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/alpha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_common_contact_list_suoyin_bg"
        android:padding="2dp"
        android:textSize="13sp"
        android:textColor="@color/guide_color" 
        />
    
    <ImageView
        android:id="@+id/img_friend_avatar"
        android:layout_width="50.0dip"
        android:layout_height="50.0dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/alpha"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6.0dip"
        android:padding="5dp"
        android:src="@drawable/default_head" />

    <TextView
        android:id="@+id/tv_friend_name"
        style="@style/Smile.TextView._Black"
        android:layout_alignTop="@id/img_friend_avatar"
        android:layout_below="@id/alpha"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10.0dip"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/img_friend_avatar"
        android:padding="5dp"
        android:singleLine="true"
        android:textSize="15sp" />

</RelativeLayout>