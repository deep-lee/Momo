<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content" >
    
    <LinearLayout 
        android:id="@+id/game_best_iv_layout"
	    android:layout_width="wrap_content"
	    android:layout_centerVertical="true"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
	    
	    <ImageView 
		    android:id="@+id/game_best"
		    android:layout_width="40dp"
		    android:layout_gravity="center_horizontal"
		    android:layout_height="25dp"
		    android:src="@drawable/icon_game_rank_best"/>
	    	    
        <ImageView 
		    android:id="@+id/game_user_icon"
		    android:layout_width="50dp"
		    android:layout_height="50dp"
		    android:layout_gravity="center_horizontal"
		    android:src="@drawable/default_avatar"/>
		
    </LinearLayout>
    
	
	
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_toRightOf="@+id/game_best_iv_layout"
	    android:layout_marginLeft="10dp"
	    android:layout_centerVertical="true"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
	    
	    <TextView 
	        android:id="@+id/game_rank_user_nick"
	        android:layout_width="wrap_content"
	        android:textColor="#000000"
	        android:text="Nick"
	        android:layout_height="wrap_content"/>
	    
	    <TextView 
	        android:id="@+id/game_rank_game_name"
	        android:layout_width="wrap_content"
	        android:text="水果连连看 ( 50秒 )"
	        android:textColor="#999999"
	        android:layout_marginTop="5dp"
	        android:layout_height="wrap_content"/>
	    	    
	</LinearLayout>
    
</RelativeLayout>
