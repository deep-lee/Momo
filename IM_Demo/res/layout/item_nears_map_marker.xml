<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/layout_nears_map_marker">
    
    <LinearLayout 
        android:id="@+id/marker_text_layout"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
        
        <TextView 
	        android:id="@+id/marker_text"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	        android:text="333"/>
        
        <TextView 
            android:id="@+id/marker_distance"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="222"
            android:layout_width="wrap_content"/>
        
    </LinearLayout>
    
    <ImageView 
        android:layout_height="wrap_content"
        android:src="@drawable/nears_map_marker"
        android:layout_below="@+id/marker_text_layout"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"/>


</RelativeLayout>
