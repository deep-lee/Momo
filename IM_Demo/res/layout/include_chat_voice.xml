<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_height="wrap_content">
        
        <ImageButton 
            android:id="@+id/chat_voice_try_listene"
            android:layout_width="wrap_content"
            android:src="@drawable/chat_voice_btn_src_selector"
            android:background="@drawable/chat_voice_btn_bg_selector"
            android:layout_height="wrap_content"/>
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">
            
            <TextView 
		        android:id="@+id/chat_voice_tips"
		        android:layout_width="wrap_content"
		        android:textColor="#808080"
		        android:layout_gravity="center_horizontal"
		        android:text="按住说话"
		        android:layout_height="wrap_content"/>
            
            <ImageButton 
	            android:id="@+id/chat_voice_speak"
	            android:layout_gravity="center_horizontal"
	            android:layout_marginTop="5dp"
	            android:layout_width="80dp"
	            android:src="@drawable/a9t"
	            android:background="@drawable/chat_voice_speak_bg_selector"
	            android:layout_height="80dp"/>
            
        </LinearLayout>
        
        <ImageButton 
            android:id="@+id/chat_voice_delete"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:src="@drawable/chat_voice_btn_delete_src_selector"
            android:background="@drawable/chat_voice_btn_bg_selector"
            android:layout_height="wrap_content"/>
        
    </RelativeLayout>
    

</LinearLayout>
