<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88000000" >

    <LinearLayout
        android:id="@+id/register_select_avator_dialog_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:gravity="center_horizontal"
        android:orientation="vertical" >
        
        <LinearLayout 
            android:id="@+id/register_select_picture_from_camera"
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:background="@drawable/base_select_picture_btn_bg">
            
            <TextView 
                android:layout_width="fill_parent"
            	android:layout_height="wrap_content"
            	android:layout_gravity="center"
            	android:gravity="center"
            	android:textColor="#000000"
            	android:text="拍照"/>
            
        </LinearLayout>
        
         <ImageView 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:src="@drawable/bar_line2"/>
        
        <LinearLayout 
            android:id="@+id/register_select_picture_from_image"
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:background="@drawable/base_select_picture_btn_bg"
            >
            
            <TextView 
                android:layout_width="fill_parent"
            	android:layout_height="wrap_content"
            	android:layout_gravity="center"
            	android:gravity="center"
            	android:textColor="#000000"
            	android:text="从相册选择"/>
            
        </LinearLayout>
        
        <ImageView 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:src="@drawable/bar_line2"/>
        
        <LinearLayout 
            android:id="@+id/register_select_picture_cancle"
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:background="@drawable/base_select_picture_btn_bg">
            
            <TextView 
                android:layout_width="fill_parent"
            	android:layout_height="wrap_content"
            	android:layout_gravity="center"
            	android:gravity="center"
            	android:textColor="#000000"
            	android:text="取消"/>
            
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>