<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/scrollView_showMessages"
     android:layout_width="match_parent"
     android:background="@color/theme_bg_color"
     android:layout_height="match_parent" >
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:orientation="vertical"
	    android:layout_height="match_parent" >
	    
	    <RelativeLayout
	        android:id="@+id/slide_layout_account_safe"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/common_list_item_bg_selector"
	        android:layout_marginTop="20dp"
	        android:minHeight="50dp"
	        android:padding="10dp" >
	        
	        <TextView
	            style="@style/Smile.TextView._Black"
	            android:layout_alignParentLeft="true"
	            android:layout_centerVertical="true"
	            android:textSize="16sp"
	            android:text="@string/slide_set_account_safe" />
	        
	        <TextView
	            android:id="@+id/slide_tv_set_account_safe"
	            android:layout_width="10dp"
	            android:layout_height="15dp"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="10dp"
	            android:drawablePadding="10dp"
	            android:background="@drawable/register_bottom_arrow" />
	    </RelativeLayout>
	    
	     <RelativeLayout
	        android:id="@+id/slide_layout_hiding_mode"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/common_list_item_bg_selector"
	        android:layout_marginTop="20dp"
	        android:minHeight="50dp"
	        android:padding="10dp" >
	        
	
	        <TextView
	            style="@style/Smile.TextView._Black"
	            android:layout_alignParentLeft="true"
	            android:layout_centerVertical="true"
	            android:textSize="16sp"
	            android:text="@string/slide_set_hiding_mode" />
	        
	        <TextView
	            android:id="@+id/slide_tv_set_hiding_mode"
	            android:layout_width="10dp"
	            android:layout_height="15dp"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="10dp"
	            android:drawablePadding="10dp"
	            android:background="@drawable/register_bottom_arrow" />
	    </RelativeLayout>
	
	     <View
	        android:layout_width="match_parent"
	        android:layout_height="0.1dp"
	        android:layout_marginRight="12dp"
	        android:layout_marginLeft="12dp"
	        android:background="#dadada" />
	    
	     <RelativeLayout
	        android:id="@+id/slide_layout_message_notify"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/common_list_item_bg_selector"
	        android:minHeight="50dp"
	        android:padding="10dp" >
	
	        <TextView
	            style="@style/Smile.TextView._Black"
	            android:layout_alignParentLeft="true"
	            android:layout_centerVertical="true"
	            android:textSize="16sp"
	            android:text="@string/slide_set_meaasge_notify" />
	        
	        <TextView
	            android:id="@+id/slide_tv_set_message_notify"
	            android:layout_width="10dp"
	            android:layout_height="15dp"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="10dp"
	            android:drawablePadding="10dp"
	            android:background="@drawable/register_bottom_arrow" />
	
	    </RelativeLayout>
	    
	     <RelativeLayout
	        android:id="@+id/slide_layout_person_dress"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/common_list_item_bg_selector"
	        android:minHeight="50dp"
	        android:layout_marginTop="20dp"
	        android:padding="10dp" >
	
	        <TextView
	            style="@style/Smile.TextView._Black"
	            android:layout_alignParentLeft="true"
	            android:textSize="16sp"
	            android:layout_centerVertical="true"
	            android:text="@string/slide_set_person_dress" />
	        
	        <TextView
	            android:id="@+id/slide_tv_set_person_dress"
	            android:layout_width="10dp"
	            android:layout_height="15dp"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="10dp"
	            android:drawablePadding="10dp"
	            android:background="@drawable/register_bottom_arrow" />
	
	    </RelativeLayout>
	    
	    <RelativeLayout
	        android:id="@+id/slide_layout_clear_cache"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/common_list_item_bg_selector"
	        android:minHeight="50dp"
	        android:layout_marginTop="20dp"
	        android:padding="10dp" >
	
	        <TextView
	            style="@style/Smile.TextView._Black"
	            android:layout_alignParentLeft="true"
	            android:layout_centerVertical="true"
	            android:textSize="16sp"
	            android:text="@string/slide_set_clear_cache" />
	        
	        <TextView
	            android:id="@+id/slide_tv_set_clear_cache"
	            android:layout_width="10dp"
	            android:layout_height="15dp"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="10dp"
	            android:drawablePadding="10dp"
	            android:background="@drawable/register_bottom_arrow" />
	        
	        
	        
	        <TextView 
	            android:id="@+id/slide_tv_set_cache_capacity"
	            android:layout_height="wrap_content"
	            android:text="5M"
	            android:layout_toLeftOf="@+id/slide_tv_set_clear_cache"
	            android:layout_centerInParent="true"
	            android:textColor="#ababab"
	            android:layout_marginRight="10dp"
	            android:layout_width="wrap_content"/>
	        
	    </RelativeLayout>
	    
	    <RelativeLayout
	        android:id="@+id/slide_layout_about"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/common_list_item_bg_selector"
	        android:minHeight="50dp"
	        android:layout_marginTop="20dp"
	        android:padding="10dp" >
	
	        <TextView
	            style="@style/Smile.TextView._Black"
	            android:layout_alignParentLeft="true"
	            android:layout_centerVertical="true"
	            android:textSize="16sp"
	            android:text="@string/slide_about_find" />
	        
	    </RelativeLayout>
	    
	    <RelativeLayout
	        android:id="@+id/slide_layout_logout"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/common_list_item_bg_selector"
	        android:minHeight="50dp"
	        android:layout_marginTop="20dp"
	        android:padding="10dp" >
	
	        <TextView
	            style="@style/Smile.TextView._Black"
	            android:textSize="16sp"
	            android:layout_centerInParent="true"
	            android:text="@string/logout" />
	        
	    </RelativeLayout>
	
	</LinearLayout>
</ScrollView>
