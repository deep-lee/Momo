<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg_color"
    android:orientation="vertical" >

    <include
        android:id="@+id/common_actionbar"
        layout="@layout/include_action_bar" />

    <RelativeLayout
        android:id="@+id/slide_layout_account_safe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_set_item_bg"
        android:minHeight="50dp"
        android:padding="10dp" >

        <TextView
            style="@style/Smile.TextView._Black"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/slide_set_account_safe" />
        <TextView
            android:id="@+id/slide_tv_set_account_safe"
            style="@style/Smile.TextView._Black"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/register_bottom_arrow" />
        
        <TextView 
            android:id="@+id/slide_tv_set_safe_class"
            android:layout_height="wrap_content"
            android:text="安全等级一般"
            android:layout_toLeftOf="@+id/slide_tv_set_account_safe"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"/>
        
    </RelativeLayout>

     <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_line_width_2"
        android:background="@drawable/base_horizontal_line" >
    </View>
    
